      .logout-text:hover {
        text-decoration: none;
        color: #fff;
      }

      .logo-area {
        width: fit-content;
        height: auto;
      }

      .btn-primary {
        font-family: 'Montserrat', sans-serif;
      }

      .nav {
        font-family: 'Montserrat', sans-serif;
      }

      .btn-edit {
        background-color: #53B175;
        border-radius: 30px;
        width: 90px;
