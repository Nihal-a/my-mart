<div class="main-content">
  <div class="container-fluid content-top-gap">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb my-breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        <div class="welcome-msg pb-3 ml-auto">
          <a href="admin/add-vendor" class="btn btn-primary">Add Vendor <i class="fas fa-plus ml-1"></i></a>
        </div>
      </ol>
    </nav>
    <!-- statistics data -->
    <div class="statistics">
      <div class="row">
        <div class="col-xl-6 pr-xl-2">
          <div class="row">
            <div class="col-sm-6 pr-sm-2 statistics-grid">
              <div class="card card_border border-primary-top p-4">
                <i class="lnr lnr-users"> </i>
                <h3 class="text-primary number">75</h3>
                <p class="stat-text">Total Dealers.</p>
              </div>
            </div>
            <div class="col-sm-6 pl-sm-2 statistics-grid">
              <div class="card card_border border-primary-top p-4">
                <i class="lnr lnr-eye"> </i>
                <h3 class="text-secondary number">51</h3>
                <p class="stat-text">Opened.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-6 pl-xl-2">
          <div class="row">
            <div class="col-sm-6 pr-sm-2 statistics-grid">
              <div class="card card_border border-primary-top p-4">
                <i class="lnr lnr-clock"> </i>
                <h3 class="text-success number">10</h3>
                <p class="stat-text">Closed</p>
              </div>
            </div>
            <div class="col-sm-6 pl-sm-2 statistics-grid">
              <div class="card card_border border-primary-top p-4">
                <i class="lnr lnr-lock"> </i>
                <h3 class="text-danger number">2</h3>
                <p class="stat-text">Total Banned</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- //statistics data -->

    <h4 class="p-2">All Dealers.</h4>
    {{!-- table start --}}
    <section id="table">
      <div class="container">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Dealers Address</th>
              <th scope="col">Dealers Name</th>
              <th scope="col">Status</th>
              <th scope="col" class="act">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each vendors}}
            <tr>
              <td style="text-transform: uppercase;">{{this.Storename}}</td>
              <td>{{this.Name}}</td>
              <td>
                Open<br>
                <span class="tm-txt" style="color: #acacac;">7:30 PM</span>
              </td>
              <td>
                <a href="admin/edit-vendor?id={{this._id}}" class="btn btn-edit">EDIT</a>
                <div class="pt-1 pb-1">
                  <a href="admin/delete-vendor/{{this._id}}" onclick="return confirm('Sure to delete {{this.name}} ?')" class="btn btn-delete">DEL</a>
                </div>
                <a href="admin/ban-vendor?id={{this._id}}" class="btn btn-ban">BAN</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </section>
    {{!-- table end --}}
